@font-face {
font-family: "avant_garde_book_bt";
src: url("<%= asset_path 'avant_garde_book_bt-webfont.ttf' %>");
}

body{
    background-color: rgb(27, 0, 53);
    background-image:url("<%= asset_path 'fondo-2.jpg' %>");
    background-size:100%;
    background-repeat:no-repeat;
    color: white;
    font-size: 1.2rem;
}

h1,h2,h3,h4,h5,h6,p,th,td{
    font-family:'avant_garde_book_bt';
}

a{
    font-family:'avant_garde_book_bt';
    color: #d3d3d3;
}

.white{
    color: white;
}

.modal{
    color: black;
}

input[type=text], input[type=file], select, textarea {
  width: 100%;
  border: 1px ;
  border-radius: 4px;
}

.col-25 {
  float: left;
  width: 25%;
  margin-top: 6px;
}

.col-75 {
  float: left;
  width: 75%;
  margin-top: 6px;
}

@media screen and (max-width: 600px) {
  .col-25, .col-75, input[type=submit] {
    width: 100%;
    margin-top: 0;
  }
}

.container {
  padding: 20px;
}

thead{
    background-color: rgba(0,0,0,0.4);
    color: white;
}




<%= form_with(model: store, local: true) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_area :description %>

    <%= f.label :active %>
    <%= select_tag "active", options_for_select([ "false", "true"]), {prompt: 'Seleccione una opciÃ³n'} %>

    <%= f.label :address %>
    <%= f.text_field :address %>

    <% if @store.persisted? %>
        <h5>Deje en blanco para generar coordenadas automaticamente</h5>

        <%= f.label :latitude %>
        <%= f.text_field :latitude %>

        <%= f.label :longitude %>
        <%= f.text_field :longitude %>
    <% end %>

    <%= f.submit %>
<% end %>
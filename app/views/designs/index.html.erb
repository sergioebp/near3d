<h1>Bienvenido a Near3d</h1>
<p>Aqui podrás encontrar impresoras 3d disponibles cerca de ti. </p>

<!--formulario de creación de diseño-->
<div class='container'>
    <% if user_signed_in? %>
        <h3>Sube tu diseño</h3>
        <%= render 'form', design: @design %>
    <% end %>
</div>

<!--listado de diseños-->
<div class='container'>
    <h5>buscar</h5>
    <input type="text" id="buscador" size="20"/>

    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Subido por</th>
                <% if user_signed_in? %>
                    <th>Estado</th>
                <% end %>
                <% if user_signed_in? %>
                    <th><!--editar--></th>
                    <th><!--eliminar--></th>
                <% end %>
            </tr>
        </thead>
        <tbody id='designs'>
            <%= render @designs %>
        </tbody>
    </table>
</div>

<!--listado de tecnologías-->
<div class='container'>
    <h2>Tecnologías</h2>
    <ul>
        <% @technologies.each do |technology| %>
            <li><a href='<%= technologies_path %>#tech<%= technology.id %>'><%= technology.name %></a></li>
        <% end %>
    </ul>
</div>

<!--formulario de creación de sugerencias-->
<div class='container'>
    <% if user_signed_in? %>
            <h4>Ayudanos a mejorar con una sugerencia</h4>
        <%= form_with(model: @suggestion) do |f| %>
            <%= f.label :content %>
            <%= f.text_area :content %>

            <%= f.submit %>
        <% end %>
    <% end %>

    <% if can? :update, Design %>
        pasa
    <% else %>
        no pasa
    <% end %>
</div>

<!--petición ajax para buscador-->
<script>
    $('#buscador').keyup(function(){
        $.ajax({
        type: "GET",
        url: "<%= designs_path %>",
        data: {buscador: $(this).val()},
        dataType: "script",
        success: function (response) {
            
        }
    });
    })
</script>